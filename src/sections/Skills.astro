---
import { Image } from 'astro:assets'; // Import Image component if you want optimized images

const skills = [
  { name: 'HTML 5', image: '/icons/html.jpg' }, // Placeholder path
  { name: 'CSS 3', image: '/icons/css.png' }, // Placeholder path
  { name: 'JavaScript', image: '/icons/js.png' }, // Placeholder path
  { name: 'Tailwind CSS', image: '/icons/tailwind.png' }, // Placeholder path
  { name: 'Astro JS', image: '/icons/astro.png' }, // Placeholder path
{ name: 'React JS', image: '/icons/react.png' }, // Placeholder path
  { name: 'TypeScript', image: '/icons/typescript.png' }, // Placeholder path
  // { name: 'Git', image: '/icons/git.svg' }, // Placeholder path
  { name: 'GitHub', image: '/icons/git.png' }, // Placeholder path
  // { name: 'Netlify', image: '/icons/netlify.png' }, // Placeholder path (example icon)
  { name: 'Responsive Design', image: '/icons/responsive.jpg' }, // Placeholder path (example icon)
  { name: 'Web Performance', image: '/icons/performance.jpg' }, // Placeholder path (example icon)
];
---
<section id="skills" class="pt-16 bg-black">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-20 text-white">My Skills</h2>

    <!-- Responsive grid for all devices -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 sm:gap-8 text-center">
      {skills.map((skill) => (
        <div 
          class="bg-gray-800 text-white p-4 sm:p-6 rounded-xl font-medium flex flex-col items-center shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-2 hover:bg-[#FF9143] group"
        >
          <img 
            src={skill.image} 
            alt={`${skill.name} icon`} 
            class="w-10 h-10 sm:w-14 sm:h-14 mb-3 sm:mb-4 object-contain filter grayscale group-hover:grayscale-0 transition duration-300" 
          />
          <p class="text-sm sm:text-base font-semibold group-hover:text-gray-900 transition-colors">{skill.name}</p>
        </div>
      ))}
    </div>
  </div>
</section>