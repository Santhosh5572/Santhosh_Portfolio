---
import { Image } from 'astro:assets'; // Import Image component if you want optimized images

const skills = [
  { name: 'HTML 5', image: '/icons/html.jpg' }, // Placeholder path
  { name: 'CSS 3', image: '/icons/css.png' }, // Placeholder path
  { name: 'JavaScript', image: '/icons/js.png' }, // Placeholder path
  { name: 'Tailwind CSS', image: '/icons/tailwind.png' }, // Placeholder path
  { name: 'Astro JS', image: '/icons/astro.png' }, // Placeholder path
{ name: 'React JS', image: '/icons/react.png' }, // Placeholder path
  { name: 'TypeScript', image: '/icons/typescript.png' }, // Placeholder path
  // { name: 'Git', image: '/icons/git.svg' }, // Placeholder path
  { name: 'GitHub', image: '/icons/git.png' }, // Placeholder path
  // { name: 'Netlify', image: '/icons/netlify.png' }, // Placeholder path (example icon)
  { name: 'Responsive Design', image: '/icons/responsive.jpg' }, // Placeholder path (example icon)
  { name: 'Web Performance', image: '/icons/performance.jpg' }, // Placeholder path (example icon)
];
---

<section id="skills" class="pt-section">
  <div class="container">
    <h2>My Skills</h2>

    <div class="skills-grid">
      {skills.map((skill) => (
        <div class="skill-item">
          <img src={skill.image} alt={`${skill.name} icon`} class="skill-icon" />
          <p class="skill-name">{skill.name}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr)); /* Adjusted minmax for better fit */
    gap: 2rem; /* Increased gap for better spacing */
    justify-items: center;
    text-align: center;
  }

  .skill-item {
    background-color: var(--secondary-clr-800);
    color: var(--secondary-clr-100);
    padding: 1.5rem 1rem; /* Adjusted padding */
    border-radius: 0.75rem; /* Slightly more rounded corners */
    font-weight: 500;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out; /* Added box-shadow to transition */
    width: 100%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add initial subtle shadow */
  }

  .skill-item:hover {
    transform: translateY(-8px); /* More pronounced lift effect */
    background-color: var(--primary-clr-400); /* Highlight background */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4); /* More pronounced shadow on hover */
  }

   .skill-item:hover .skill-name {
      color: var(--secondary-clr-900); /* Darker text on hover for contrast */
  }

  .skill-icon {
    width: 50px; /* Increased icon size */
    height: 50px; /* Increased icon size */
    margin-bottom: 1rem; /* Increased space below icon */
    object-fit: contain;
    filter: grayscale(50%); /* Subtle grayscale filter */
    transition: filter 0.3s ease-in-out; /* Add transition to filter */
  }

  .skill-item:hover .skill-icon {
     filter: grayscale(0%); /* Remove grayscale on hover */
  }

  .skill-name {
      font-size: 1.1rem; /* Slightly larger font size */
      font-weight: 600;
      color: var(--secondary-clr-100);
      transition: color 0.3s ease-in-out;
  }


  /* Adjust grid for smaller screens */
  @media (max-width: 480px) {
    .skills-grid {
      grid-template-columns: repeat(auto-fit, minmax(90px, 1fr)); /* Further adjusted for smaller screens */
      gap: 1rem;
    }
    .skill-item {
       padding: 1rem 0.5rem;
    }
     .skill-icon {
       width: 40px;
       height: 40px;
       margin-bottom: 0.8rem;
     }
     .skill-name {
       font-size: 0.9rem;
     }
  }
</style> 